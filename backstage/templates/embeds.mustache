{{> header}}

<article>
  <figure class="card">
    {{# video }}
      <video playsinline controls preload="none"
        src="{{src}}"
        {{# width}}
          width="{{width}}"
        {{/ width}}
        {{# height}}
          height="{{height}}"
        {{/ height}}
        {{# img }}
          poster="{{ img.src }}"
        {{/ img }}
      ></video>
    {{/ video }}
    {{# iframe }}
      <a href="{{graph.url}}"
        class="future-frame"
        data-src="{{iframe.src}}"
        {{# iframe.width}}
          data-width="{{iframe.width}}"
        {{/ iframe.width}}
        {{# iframe.height}}
          data-height="{{iframe.height}}"
        {{/ iframe.height}}
      >
        {{# img }}
          <img
            {{# alt}}
              alt="{{alt}}"
            {{/ alt}}
            {{# width}}
              width="{{width}}"
            {{/ width}}
            {{# height}}
              height="{{height}}"
            {{/ height}}
            src="{{src}}"
          >
        {{/ img }}
      </a>
    {{/ iframe }}
    {{^ iframe }}
      {{^ video }}
        {{# audio }}
          {{# img }}
            <img class="audio-control"
              data-src="{{audio.src}}"
              {{# alt}}
                alt="{{alt}}"
              {{/ alt}}
              {{# width}}
                width="{{width}}"
              {{/ width}}
              {{# height}}
                height="{{height}}"
              {{/ height}}
              src="{{src}}"
            >
          {{/ img }}
        {{/ audio }}
        {{^ audio }}
          <a href="{{graph.url}}">
            {{# img }}
              <img
                {{# alt}}
                  alt="{{alt}}"
                {{/ alt}}
                {{# width}}
                  width="{{width}}"
                {{/ width}}
                {{# height}}
                  height="{{height}}"
                {{/ height}}
                src="{{src}}"
              >
            {{/ img }}
          </a>
        {{/ audio }}
      {{/ video }}
    {{/ iframe }}

    {{# audio }}
      <audio controls preload="metadata" src="{{src}}"></audio>
    {{/ audio }}

    <figcaption>
      <a href="{{ graph.url }}"><b>{{ graph.title }}</b>{{# graph.site_name }} â€¢ {{ graph.site_name }}{{/ graph.site_name }}</a>
      {{# graph.description }}
        <i>{{ graph.description }}</i>
      {{/ graph.description }}
    </figcaption>
  </figure>

  <pre><code>{{ graphJSON }}</code></pre>
</article>

{{> footer}}
