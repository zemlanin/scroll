          line-height: 1.5em;
        }

        body.dark {
          background-color: black;
          color: white;
        }

        @media (max-width: 40em) {
          body {
            padding-bottom: 1em;
            padding-left: 1em;
            padding-right: 1em;
          }
        }

        @supports (padding: max(0px)) {
          body {
            padding-bottom: max(1em, env(safe-area-inset-bottom));
            padding-left: max(1em, env(safe-area-inset-left));
            padding-right: max(1em, env(safe-area-inset-right));
          }
        }

        * {
          box-sizing: border-box;
        }

        article {
          margin-bottom: 2em;
          max-width: 100%;
          overflow-wrap: break-word;
        }

        article img,
        article video {
          max-width: 100%;
          width: auto;
          max-height: 22.5em;
          height: auto;
          display: block;
          margin: auto;
          border: 1px solid black;
        }

        body.dark article img,
        body.dark article video {
          border-color: white;
        }

        article iframe,
        article a.future-frame {
          display: block;
          margin: auto;
          max-width: 100%;
        }

        article a.future-frame {
          position: relative;
        }

