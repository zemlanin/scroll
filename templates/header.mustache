  <link rel="alternate" type="application/rss+xml" title="{{ feed.description }}" href="{{{ feed.url }}}" />
  {{/feed}}
  <link href="https://twitter.com/zemlanin" rel="me">
  <link href="https://github.com/zemlanin" rel="me">
