{{> header}}

{{#posts}}
<article id="{{id}}">
  {{#longread}}
    {{{title}}}
    {{{teaser}}}
    <a href="{{{url}}}" class="word-count">
      {{wordCount}} слов &rarr;
    </a>
  {{/longread}}

  {{^longread}}
    {{{html}}}
  {{/longread}}

  <time datetime="{{created}}">
    <a href="{{{url}}}" title="{{created}}">
      {{createdDate}}
    </a>
  </time>
</article>
{{/posts}}

{{> footer}}
