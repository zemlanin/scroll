{{> header}}

{{#post}}
<article>
  {{#htmlTitle}}{{{htmlTitle}}}{{/htmlTitle}}
  {{{html}}}

  {{^longread}}{{{htmlFootnotes}}}{{/longread}}

  {{^internal}}
  <div class="share-and-time">
    {{#public}}
      <button title="{{#post}}{{#t}}Share{{/t}}{{/post}}" data-share data-share-url="{{{url}}}" data-share-state="unknown">
        <span data-share-default>{{#fas}}share{{/fas}}</span>
        <span data-share-done>{{#fas}}check{{/fas}}</span>
      </button>
      {{#blog.author.buymeacoffee}}
        <a href="https://www.buymeacoffee.com/{{blog.author.buymeacoffee}}" target="_blank" title="{{#post}}{{#t}}Buy me a coffee{{/t}}{{/post}}" class="print:hidden">{{> buymeacoffee.svg }}<span>{{#post}}{{#t}}Buy me a coffee{{/t}}{{/post}}</span></a>
      {{/blog.author.buymeacoffee}}
    {{/public}}
    <div style="flex-grow: 1; display: flex;"></div>
    <time datetime="{{created}}">
      <a href="{{{url}}}" title="{{created}}">
        {{createdDate}}
      </a>
    </time>
  </div>
  {{/internal}}

  {{#longread}}{{{htmlFootnotes}}}{{/longread}}
</article>
{{/post}}

{{> footer}}
